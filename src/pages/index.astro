---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug";
import { ThemeSwitch } from "astro-color-scheme";

async function loadData(collectionName) {
  const collection = await getCollection(collectionName);
  return collection
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .slice(0, 3);
}

const posts = await loadData("blog");
const works = await loadData("project");
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there ðŸ‘‹</div>
    <div class="text-5xl font-bold">I'm Datamin</div>
    <div class="text-3xl py-3 font-bold">Business & Data Analytics Blog</div>
    <div class="py-2">
      <text class="text-lg">
        My name is <b>Min Kim</b>, I am a business student who codes! I am going
        to share technology knowledge with you, design business systems, and
        develop basic coding skills. Enjoy!
      </text>
    </div>
    <div class="mt-8">
      <a
        class="btn"
        href="https://www.linkedin.com/in/datamin/"
        target="_blank"
      >
        Let's connect!
      </a>
      <a
        href="https://github.com/manuelernestog/astrofy"
        target="_blank"
        class="btn btn-outline ml-5"
      >
        Get This template
      </a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">My last projects</div>
    {
      works.map((work) => (
        <>
          <HorizontalCard
            title={work.data.title}
            img={work.data.heroImage}
            desc={work.data.description}
            url={"/project/" + createSlug(work.data.title, work.slug)}
            target="_self"
            badge={work.data.badge}
          />
          <div class="divider my-0" />
        </>
      ))
    }
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
    {
      posts.map((post) => (
        <>
          <HorizontalCard
            title={post.data.title}
            img={post.data.heroImage}
            desc={post.data.description}
            url={"/blog/" + createSlug(post.data.title, post.slug)}
            target="_self"
            badge={post.data.badge}
          />
          <div class="divider my-0" />
        </>
      ))
    }
  </div>
</BaseLayout>
